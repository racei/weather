<div class = "container">
  <div class="navbar">
    <div class = "navbar-inner">
      <a class = "brand" href="#"> Weather </a>
    </div> 
  </div>
  <div class = "row">
    <% @days.each do |day| %>
      <div class="span2">
         <span class = "centerme"><%= day %></span>
         <div class = "temp"></div>
         <div class = "desc"></div>
         <div class = "wimg"></div>
      </div>
    <% end %>
  </div>
</div>

